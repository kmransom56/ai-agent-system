# AI Agent System - Environment Configuration

# Python Environment
PYTHONUNBUFFERED=1

# Timezone
TZ=America/New_York

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Agent Configuration
DAILY_LEAD_TARGET=50
WEEKLY_BLOG_TARGET=3
DAILY_SOCIAL_POSTS=5

# API Keys (optional - add as needed)
# HUBSPOT_API_KEY=your_key_here
# SALESFORCE_USERNAME=your_username
# SALESFORCE_PASSWORD=your_password
# SALESFORCE_SECURITY_TOKEN=your_token

# Database Configuration (if using external services)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0

# Monitoring Configuration
METRICS_ENABLED=true
LOGGING_LEVEL=INFO

# GTM Plans Location
GTM_PLANS_DIR=/app/gtm-plans

# Cache and Logs
CACHE_DIR=/app/cache
LOGS_DIR=/app/logs
REPORTS_DIR=/app/reports
